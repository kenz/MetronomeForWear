<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="org.firespeed.metronome.model.Bpm" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/item_list_background">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{item.title}"
            android:textColor="@color/item_list_primary"
            android:textSize="14sp"
            tools:text="hogehoge" />

        <TextView
            android:id="@+id/bpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="8sp"
            android:text="@{Integer.toString(item.bpm)}"
            android:textColor="@color/item_list_primary_dark"
            android:textSize="22sp"
            tools:text="888" />


    </LinearLayout>
</layout>